<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="10dp"
            android:src="@mipmap/recycler_icon"
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp" />


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using the Recycler View"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                android:layout_marginLeft="30dp"
                />

            <TextView

                android:layout_marginTop="10dp"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Then create a new layout. This layout will used as the layout for each list item"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:layout_marginLeft="30dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textFontWeight="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1500.00 LKR"
                    android:textSize="20dp"
                    android:textColor="@color/Black"
                    android:textAllCaps="false"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="@color/Red"
                    android:textFontWeight="5dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="15dp"
                    android:textColor="@color/White"
                    android:textAllCaps="false"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>